# Environment variables for ROLEVO Flask Application
# Copy this file to .env and fill in the values

# =============================================================================
# REQUIRED - Application will fail to start without these in production
# =============================================================================

# Generate a secure secret key with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secret-key-here-replace-me

# Database Configuration
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=your_database_password
DB_NAME=roleplay

# OpenAI API Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here

# =============================================================================
# OPTIONAL - Application Configuration
# =============================================================================

# Flask environment (development or production)
# In production, SESSION_COOKIE_SECURE will be enabled automatically
FLASK_ENV=development

# Enable debug mode (only for development)
FLASK_DEBUG=false

# Application entry point
FLASK_APP=roleplay.py

# =============================================================================
# AIO/Trajectorie Integration (for SSO)
# =============================================================================

# API token for AIO platform to authenticate with Rolevo
AIO_API_TOKEN=your_aio_api_token_here

# Default callback URL for sending roleplay results
AIO_CALLBACK_URL=https://aio.example.com/api/rolevo/results

# Webhook secret for signing result payloads (HMAC-SHA256)
AIO_WEBHOOK_SECRET=your_webhook_secret_for_signing

# Q3 integration (Trajectorie-style assessment launch)
Q3_INTEGRATION_SECRET=your_matching_secret_with_q3
Q3_BASE_URL=https://q3.example.com

# =============================================================================
# External Services
# =============================================================================

# Trajectorie API (legacy)
TRAJECTORIE_API_URL=http://codrive.sgate.in/api/web/v1/coursejsons/data

# ElevenLabs TTS (optional)
XI_API_KEY=your_elevenlabs_api_key

# Persona360 16PF Voice Analysis
PERSONA360_API_URL=http://api.persona360.rapeti.dev:8290/predict
PERSONA360_API_KEY=
PERSONA360_TIMEOUT=120

# =============================================================================
# Email/SMTP Configuration (for sending reports)
# =============================================================================

SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
ADMIN_EMAIL=admin@example.com
ADMIN_NAME=Rolevo Admin

# =============================================================================
# Upload Paths (relative to project root)
# =============================================================================

UPLOAD_PATH_ROLEPLAY=data/roleplay
UPLOAD_PATH_IMAGES=data/images
UPLOAD_PATH_COMP=data/master
